<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyy_wzw.comeacross.user.fragments.RegisterFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:src="@mipmap/icon_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"/>
       <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
             <EditText
                android:id="@+id/ed_register_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="8dp"
                android:background="@null"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:hint="昵称"
                android:textColorHint="#ffffff"/>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="#ffffff"/>
            </LinearLayout>
           <ImageView
               android:id="@+id/img_register_user_photo"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:tint="@color/color_blue"
               android:src="@mipmap/user_icon"/>
      </LinearLayout>
        <EditText
            android:id="@+id/ed_register_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="8dp"
            android:background="@null"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:hint="手机号"
            android:textColorHint="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffffff"/>
        <EditText
            android:id="@+id/ed_register_psw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ed_register_SMSCode"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:hint="验证码"
                    android:textColorHint="#ffffff"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ffffff"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_register_getSMSCode"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/btn_login_selector"
                android:textSize="15dp"
                android:text="获取验证码"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_register_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_login_man"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#ffffff"
                android:text="男"
                android:textColor="@color/color_login_text"/>
            <RadioButton
                android:id="@+id/rb_login_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:buttonTint="#ffffff"
                android:text="女"
                android:textColor="@color/color_login_text"/>
        </RadioGroup>

        <TextView
            android:id="@+id/btn_user_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login_selector"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="18dp"
            android:text="注册"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_register_back_login"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_login_text"
                android:text="返回登录"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:text="注册就代表阅读同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_login_text"
            android:text="服务条款"/>
    </LinearLayout>

</FrameLayout>
